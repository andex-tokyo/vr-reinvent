<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>viewVR</title>
    <meta name="description" content="360&deg; Image - A-Frame">
    <script src="https://rawgit.com/aframevr/aframe/55ed9cd/dist/aframe-master.min.js"></script>
  </head>
  <body>
    <a-scene>
       <a-assets>
      <img id="result" src="./images/result.png">
      <img id="in" src="./images/in.png">
      <img id="out" src="./images/out.png">
      </a-assets>
     <a-entity class="in" geometry="primitive: plane;width:4;height:4;" position="20 0 -15" rotation="0 -25 0" material="src: #in;transparent: true; "></a-entity>
      <a-entity class="out" geometry="primitive: plane;width:4;height:4;" position="10 0 -25" rotation="0 0 0" material="src: #out;transparent: true; "></a-entity>
      <a-sky src="./images/back.jpg" rotation="0 -130 0"></a-sky>
    <a-camera>
    <a-entity cursor class="cursor" geometry="primitive: plane;width:15;height:15;" position="0 0 -10" rotation="0,-10,0" material="src: #result;transparent: true; "></a-entity></a-cursor>
  </a-camera>
    </a-scene>
    <script type="text/javascript">
    var zoomin = document.querySelector('.in');
    var zoomout = document.querySelector('.out');
    var cursor = document.querySelector('.cursor');
    var x = 1
    zoomin.addEventListener('mouseenter', function () {
      x = x + 0.2;
    cursor.setAttribute('scale', {x: x, y: x, z: x});
    console.log("mouseenter");
    });
    zoomout.addEventListener('mouseenter', function () {
      x = x - 0.2;
    cursor.setAttribute('scale', {x: x, y: x, z: x});
    console.log("mouseenter");
    });
    </script>
  </body>
</html>
